{{!< default}}

<div class="gh-page">
    <div class="gh-container">
        <header class="gh-page-head">
            <h1>{{@site.title}}</h1>
            <p>
                {{@site.description}}
            </p>
            {{#if @site.cover_image}}
                <img class="gh-page-image" src="{{@site.cover_image}}" alt="{{@site.title}}" />
            {{/if}}
        </header>
        <div class="gh-postfeed">
        {{#foreach posts visibility="all"}}

            {{> "card"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

    </div>
</div>
